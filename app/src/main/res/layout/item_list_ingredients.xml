<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_8">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
<ImageView
    android:layout_width="30dp"
    android:layout_height="30dp"
    android:src="@drawable/ic_action_done"
    android:layout_alignParentLeft="true"
    android:layout_centerVertical="true"
    android:layout_alignParentStart="true"
    android:layout_marginLeft="@dimen/dp_8"
    android:layout_marginStart="@dimen/dp_8"
    android:id="@+id/ic_done"/>

        <TextView
            android:id="@+id/tv_ingredient_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/ic_done"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/ic_done"
            android:text="quantity"
            android:textAppearance="?android:textAppearanceSmall"
            android:layout_marginLeft="@dimen/dp_8"
            android:textColor="@android:color/black" />
        <TextView
            android:id="@+id/tv_ingredient_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ingredient"
            android:textAppearance="?android:textAppearanceSmall"
            android:layout_toRightOf="@id/tv_ingredient_quantity"
            android:layout_toEndOf="@id/tv_ingredient_quantity"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:textColor="@android:color/black"
            android:textStyle="bold" />

    </RelativeLayout>


</android.support.v7.widget.CardView>