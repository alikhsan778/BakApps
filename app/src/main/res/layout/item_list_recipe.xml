<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    app:cardCornerRadius="@dimen/dp_8"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_image_recipe"
            android:layout_width="200dp"
            android:layout_height="175dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:scaleType="fitXY"
            android:src="@drawable/img_nutella_pie" />


        <TextView
            android:id="@+id/tv_recipe_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="@dimen/dp_8"
            android:text="Nutela Pixe"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@android:color/black"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/ic_serving"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@id/tv_recipe_name"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_16"
            android:src="@drawable/serving" />

        <TextView
            android:id="@+id/tv_number_servings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_recipe_name"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginTop="22dp"
            android:layout_toEndOf="@id/ic_serving"
            android:layout_toRightOf="@id/ic_serving"
            android:text="serving"
            android:textAppearance="?android:textAppearanceSmall"
            android:textColor="@color/color_number" />

        <ImageView
            android:id="@+id/ic_ingredients"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@id/ic_serving"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_8"
            android:src="@drawable/ingredient" />

        <TextView
            android:id="@+id/tv_number_ingredients"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ic_serving"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginTop="15dp"
            android:layout_toEndOf="@id/ic_ingredients"
            android:layout_toRightOf="@id/ic_ingredients"
            android:text="serving"
            android:textAppearance="?android:textAppearanceSmall"
            android:textColor="@color/color_number" />

        <ImageView
            android:id="@+id/ic_step"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@id/ic_ingredients"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_8"
            android:src="@drawable/step" />

        <TextView
            android:id="@+id/tv_number_step"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ic_ingredients"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginTop="15dp"
            android:layout_toEndOf="@id/ic_step"
            android:layout_toRightOf="@id/ic_step"
            android:text="serving"
            android:textAppearance="?android:textAppearanceSmall"
            android:textColor="@color/color_number" />

        <ImageButton
            android:id="@+id/start_cooking"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/iv_image_recipe"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_action_move" />

    </RelativeLayout>

</android.support.v7.widget.CardView>